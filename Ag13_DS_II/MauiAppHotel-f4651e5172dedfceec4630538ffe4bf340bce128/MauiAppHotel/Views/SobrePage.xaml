<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.SobrePage"
             Title="Sobre"
             BackgroundColor="{StaticResource Gray100}">

    <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="CenterAndExpand">

        <Label Text="App Hotel"
               FontFamily="Kalam"
               FontSize="40"
               TextColor="{StaticResource Primary}"
               HorizontalOptions="Center" />

        <Label Text="Desenvolvedor: Thamires"
               FontFamily="Kalam"
               FontSize="20"
               TextColor="{StaticResource Primary}"
               HorizontalOptions="Center" />

        <Label Text="Ano de desenvolvimento: 2025"
               FontFamily="Kalam"
               FontSize="20"
               TextColor="{StaticResource Primary}"
               HorizontalOptions="Center" />

        <Button Text="Voltar"
                Clicked="OnVoltarClicked"
                BackgroundColor="{StaticResource Primary}"
                TextColor="White"
                HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>
